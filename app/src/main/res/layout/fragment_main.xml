<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.segi.testmvp.widget.SimpleToolbar
        style="@style/SimpleToolbar"
        app:stb_navigation_icon="@mipmap/ic_launcher"
        app:stb_title_text="@string/app_name"
        app:stb_right_text="右边的文字" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="这是MainActivity加载的MainFragment"
        android:gravity="center"
        android:textSize="20sp"/>

    <Button android:id="@+id/btn_hold"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="热门" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="按钮2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="按钮3" />

</LinearLayout>